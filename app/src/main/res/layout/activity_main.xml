<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"


    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ihsanberk.scoreboard.MainActivity">

    <TextView
        android:id="@+id/txtOyuncuBir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtPoneName"
        android:layout_toLeftOf="@+id/txtIstakaSayısı"
        android:layout_toStartOf="@+id/txtIstakaSayısı"
        android:text="@string/_000"
        android:textColor="@android:color/holo_red_light"
        android:textSize="145sp" />

    <TextView
        android:id="@+id/txtOyuncuIki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtOyuncuBir"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtElsayisi"
        android:layout_toEndOf="@+id/txtIstakaSayısı"
        android:layout_toRightOf="@+id/txtIstakaSayısı"
        android:gravity="right"
        android:text="000"
        android:textColor="@android:color/holo_red_light"
        android:textSize="145sp" />

    <TextView
        android:id="@+id/txtOrtalamaBir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtOyuncuBir"
        android:layout_toLeftOf="@+id/txtIstakaSayısı"
        android:layout_toStartOf="@+id/txtIstakaSayısı"
        android:text="0000"
        android:textColor="@android:color/holo_red_light"
        android:textSize="72sp" />

    <TextView
        android:id="@+id/txtOrtalamaIki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtOyuncuIki"
        android:layout_toEndOf="@+id/txtElsayisi"
        android:layout_toRightOf="@+id/txtElsayisi"
        android:gravity="right"
        android:text="0000"
        android:textColor="@android:color/holo_red_light"
        android:textSize="72sp" />

    <TextView
        android:id="@+id/txtIstakaSayısı"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPoneName"
        android:layout_centerHorizontal="true"
        android:text="00"
        android:textColor="@android:color/holo_red_light"
        android:textSize="140sp" />

    <Button
        android:id="@+id/btnOyuncuBirAzalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/btnOyuncuBirArttir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtOrtalamaBir"
        android:layout_toLeftOf="@+id/btnOyuncuBirArttir"
        android:layout_toStartOf="@+id/btnOyuncuBirArttir"
        android:text="GERİ" />

    <Button
        android:id="@+id/btnOyuncuBirArttir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnArsiv"
        android:layout_below="@+id/txtOrtalamaBir"
        android:layout_toEndOf="@+id/txtMaksimumBir"
        android:layout_toLeftOf="@+id/btnOyuncuBirEnter"
        android:layout_toRightOf="@+id/txtMaksimumBir"
        android:layout_toStartOf="@+id/btnOyuncuBirEnter"
        android:text="SAYI" />

    <Button
        android:id="@+id/btnOyuncuBirEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnArsiv"
        android:layout_below="@+id/txtOrtalamaBir"
        android:layout_toEndOf="@+id/btnArsiv"
        android:layout_toLeftOf="@+id/txtElsayisi"
        android:layout_toRightOf="@+id/btnArsiv"
        android:layout_toStartOf="@+id/txtElsayisi"
        android:text="GİRİŞ" />

    <Button
        android:id="@+id/btnOyuncuIkiEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnKaydet"
        android:layout_alignLeft="@+id/txtMaksimumIki"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/txtMaksimumIki"
        android:layout_below="@+id/txtOrtalamaIki"
        android:text="GİRİŞ" />

    <Button
        android:id="@+id/btnOyuncuIkiArttir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnKaydet"
        android:layout_below="@+id/txtOrtalamaIki"
        android:layout_toEndOf="@+id/btnKaydet"
        android:layout_toLeftOf="@+id/btnOyuncuIkiEnter"
        android:layout_toRightOf="@+id/btnKaydet"
        android:layout_toStartOf="@+id/btnOyuncuIkiEnter"
        android:text="SAYI" />

    <Button
        android:id="@+id/btnOyuncuIkiAzalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnReset"
        android:layout_alignLeft="@+id/txtOrtalamaIki"
        android:layout_alignStart="@+id/txtOrtalamaIki"
        android:layout_below="@+id/txtOrtalamaIki"
        android:layout_toLeftOf="@+id/btnOyuncuIkiArttir"
        android:layout_toStartOf="@+id/btnOyuncuIkiArttir"
        android:text="GERİ" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtIstakaSayısı"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtIstakaSayısı"
        android:layout_toLeftOf="@+id/btnKaydet"
        android:layout_toStartOf="@+id/btnKaydet"
        android:text="SIFIRLA" />

    <TextView
        android:id="@+id/txtElsayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtIstakaSayısı"
        android:layout_alignLeft="@+id/txtIstakaSayısı"
        android:layout_alignStart="@+id/txtIstakaSayısı"
        android:text="Istaka Sayısı"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtMaksimumBir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Yüksek Seri : 0"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yüksek Seri : 0"
        android:textColor="@android:color/holo_red_light"
        android:id="@+id/txtMaksimumIki"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtPoneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txtIstakaSayısı"
        android:layout_toStartOf="@+id/txtIstakaSayısı"
        android:text="Oyuncu A"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtPtwoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtElsayisi"
        android:layout_alignBottom="@+id/txtElsayisi"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/txtIstakaSayısı"
        android:layout_toRightOf="@+id/txtIstakaSayısı"
        android:text="Oyuncu B"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp"
        android:layout_toEndOf="@+id/txtElsayisi"
        android:layout_toRightOf="@+id/txtElsayisi"
        android:text="Kaydet" />

    <Button
        android:id="@+id/btnArsiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="95dp"
        android:layout_marginStart="95dp"
        android:layout_toEndOf="@+id/txtMaksimumBir"
        android:layout_toRightOf="@+id/txtMaksimumBir"
        android:onClick="OpenHistory"
        android:text="ARŞİV" />


</RelativeLayout>
